    private async Task SendCustomEmail()
    {
        if (emailRegistration == null || string.IsNullOrWhiteSpace(customEmailSubject) || string.IsNullOrWhiteSpace(customEmailBody))
        {
            await JSRuntime.InvokeVoidAsync("showToast", "Chyba", "Vyplňte předmět a obsah emailu", "error");
            return;
        }

        try
        {
            isSendingEmail = true;
            var camp = camps.FirstOrDefault(c => c.Id == emailRegistration.CampId);

            // Replace variables
            var body = customEmailBody
                .Replace("{{ParentName}}", emailRegistration.ParentName)
                .Replace("{{ChildName}}", emailRegistration.ChildFullName)
                .Replace("{{CampName}}", camp?.Name ?? "")
                .Replace("{{AccessCode}}", emailRegistration.AccessCode);

            var subject = customEmailSubject
                .Replace("{{CampName}}", camp?.Name ?? "");

            // Convert to HTML
            var bodyHtml = body.Replace("\n", "<br>");
            var htmlBody = "<!DOCTYPE html><html><head><meta charset='UTF-8'></head><body style='font-family: Arial, sans-serif; line-height: 1.6;'><div style='max-width: 600px; margin: 0 auto; padding: 20px;'>" + bodyHtml + "</div></body></html>";

            var success = await EmailService.SendEmailAsync(emailRegistration.ParentEmail, subject, htmlBody);
            if (success)
            {
                await JSRuntime.InvokeVoidAsync("showToast", "Úspěch", "Email byl odeslán", "success");
                CloseEmailModal();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("showToast", "Chyba", "Nepodařilo se odeslat email", "error");
            }
