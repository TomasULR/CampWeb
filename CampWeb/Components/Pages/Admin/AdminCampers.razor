    private async Task SendBulkEmails()
    {
        try
        {
            // Get registrations to send emails to (paid and confirmed only)
            var emailRecipients = filteredRegistrations
                .Where(r => r.Status == RegistrationStatus.Paid || r.Status == RegistrationStatus.Confirmed)
                .ToList();

            if (!emailRecipients.Any())
            {
                await JSRuntime.InvokeVoidAsync("showToast", "Info", "Žádné registrace k odeslání", "info");
                return;
            }

            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
                $"Opravdu chcete poslat potvrzovací emaily {emailRecipients.Count} registracím?");

            if (!confirmed) return;

            isSendingEmails = true;
            StateHasChanged();

            int successCount = 0;
            int failCount = 0;

            foreach (var registration in emailRecipients)
            {
                try
                {
                    var camp = camps.FirstOrDefault(c => c.Id == registration.CampId);
                    if (camp != null)
                    {
                        var result = await EmailService.SendRegistrationConfirmationAsync(registration, camp);
                        if (result)
                            successCount++;
                        else
                            failCount++;

                        // Small delay to avoid overwhelming SMTP server
                        await Task.Delay(500);
                    }
                    else
                    {
                        failCount++;
                    }
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Error sending bulk email to {Email}", registration.ParentEmail);
                    failCount++;
                }
            }

            await JSRuntime.InvokeVoidAsync("showToast", "Hotovo", 
                $"Odesláno: {successCount} úspěšně, {failCount} selhalo", 
                failCount == 0 ? "success" : "warning");

            Logger.LogInformation("Bulk email sent: {Success} successful, {Failed} failed", successCount, failCount);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error in bulk email sending");
            await JSRuntime.InvokeVoidAsync("showToast", "Chyba", "Nepodařilo se odeslat emaily", "error");
        }
        finally
        {
            isSendingEmails = false;
            StateHasChanged();
        }
    }
