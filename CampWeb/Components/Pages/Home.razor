@page "/"
@page "/home"
@inject ICampService CampService

<PageTitle>Domů - Letní Tábory Plzeň</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Nejlepší letní tábory v Plzni</h1>
        <p class="lead mb-5">Objevte úžasné dobrodružství pro vaše děti v krásném prostředí Plzeňského kraje</p>
        <a href="/mapa" class="btn btn-primary btn-lg me-3">
            <i class="fas fa-map-marked-alt me-2"></i>Prozkoumat mapu
        </a>
        <a href="/tabory" class="btn btn-outline-light btn-lg">
            <i class="fas fa-list me-2"></i>Všechny tábory
        </a>
    </div>
</section>

<!-- Features -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="feature-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h4>Interaktivní mapa</h4>
                <p>Najděte tábor přímo ve vaší oblasti pomocí naší přehledné mapy</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h4>Zkušení vedoucí</h4>
                <p>Všichni naši vedoucí jsou proškolení a mají dlouholeté zkušenosti</p>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-icon">
                    <i class="fas fa-camera"></i>
                </div>
                <h4>Živé zprávy</h4>
                <p>Sledujte fotky a novinky z tábora v reálném čase</p>
            </div>
        </div>
    </div>
</section>

<!-- Popular Camps -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-5">Nejoblíbenější tábory</h2>
        <div class="row">
            @if (popularCamps != null)
            {
                @foreach (var camp in popularCamps)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card camp-card">
                            <div class="camp-image">
                                <i class="@GetCampIcon(camp.Type)"></i>
                            </div>
                            <div class="card-body">
                                <h5>@camp.Name</h5>
                                <p class="text-muted">@camp.ShortDescription</p>
                                <p class="fw-bold text-primary">@camp.Price Kč / týden</p>
                                <a href="/tabor/@camp.Id" class="btn btn-primary">Více info</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Statistics -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <h2 class="display-5 fw-bold">250+</h2>
                <p>Spokojených dětí</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-5 fw-bold">15</h2>
                <p>Různých táborů</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-5 fw-bold">8</h2>
                <p>Let zkušeností</p>
            </div>
            <div class="col-md-3 mb-4">
                <h2 class="display-5 fw-bold">98%</h2>
                <p>Spokojenost rodičů</p>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        background: linear-gradient(135deg, rgba(44, 90, 160, 0.9), rgba(30, 61, 114, 0.9)), 
                    url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 600"><rect fill="%23e3f2fd" width="1200" height="600"/><circle fill="%23bbdefb" cx="200" cy="150" r="80"/><circle fill="%2390caf9" cx="800" cy="350" r="120"/><circle fill="%2364b5f6" cx="1000" cy="100" r="60"/></svg>');
        background-size: cover;
        color: white;
        padding: 100px 0;
        text-align: center;
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        background: var(--primary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin: 0 auto 20px;
    }

    .camp-card {
        margin-bottom: 30px;
        height: 100%;
    }

    .camp-image {
        height: 200px;
        background: linear-gradient(45deg, #e3f2fd, #bbdefb);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: var(--primary-color);
    }
</style>

@code {
    private List<Camp> popularCamps = new();

    protected override async Task OnInitializedAsync()
    {
        popularCamps = await CampService.GetAvailableCampsAsync();
    }

    private static string GetCampIcon(string type)
    {
        return type switch
        {
            "adventure" => "fas fa-mountain",
            "sport" => "fas fa-volleyball-ball",
            "creative" => "fas fa-palette",
            "science" => "fas fa-microscope",
            "water" => "fas fa-swimmer",
            _ => "fas fa-campground"
        };
    }
}