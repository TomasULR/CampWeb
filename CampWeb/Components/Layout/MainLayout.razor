@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4">
            <a class="navbar-brand" href="/">
                <i class="fas fa-campground me-2"></i>Letní Tábory Plzeň
            </a>
            <a class="nav-link @GetActiveClass("/")" href="/">Domů</a>
            <a class="nav-link @GetActiveClass("/mapa")" href="/mapa">Mapa táborů</a>
            <a class="nav-link @GetActiveClass("/tabory")" href="/tabory">Všechny tábory</a>
            
            <AuthorizeView>
                <Authorized>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3">
                            <i class="fas fa-user me-1"></i>
                            @context.User.Identity?.Name
                        </span>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown">
                                <i class="fas fa-cog"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/moje-registrace">
                                        <i class="fas fa-list me-2"></i>Moje registrace
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/profil">
                                        <i class="fas fa-user-edit me-2"></i>Profil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" action="/Account/logout" class="m-0">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Odhlásit se
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="ms-auto">
                        <a class="nav-link @GetActiveClass("/prihlaseni")" href="/prihlaseni">
                            <i class="fas fa-sign-in-alt me-1"></i>Přihlášení
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h6>Letní Tábory Plzeň</h6>
                <p class="small">Kvalitní letní tábory pro děti v Plzeňském kraji</p>
            </div>
            <div class="col-md-6 text-end">
                <p class="small mb-0">© 2025 Letní Tábory Plzeň</p>
                <p class="small">Kontakt: info@letnítabory.cz | +420 123 456 789</p>
            </div>
        </div>
    </div>
</footer>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<style>
    .top-row {
        background-color: #2c5aa0;
        display: flex;
        align-items: center;
        padding: 1rem;
    }

    .navbar-brand {
        color: white !important;
        font-weight: bold;
        text-decoration: none;
        font-size: 1.2rem;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.8) !important;
        text-decoration: none;
        margin: 0 1rem;
        transition: color 0.3s;
    }

    .nav-link:hover {
        color: white !important;
    }

    .nav-link.active {
        color: white !important;
        font-weight: bold;
        border-bottom: 2px solid white;
        padding-bottom: 2px;
    }

    .dropdown-menu {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .ms-auto {
        margin-left: auto;
    }

    .btn-outline-light {
        border-color: rgba(255, 255, 255, 0.5);
        color: white;
    }

    .btn-outline-light:hover {
        background-color: white;
        color: #2c5aa0;
    }
</style>

@code {
    private string GetActiveClass(string path)
    {
        return Navigation.Uri.EndsWith(path) ? "active" : "";
    }
}