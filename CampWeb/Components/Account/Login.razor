@page "/prihlaseni"
@page "/login"
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.AspNetCore.Antiforgery
@inject NavigationManager Navigation
@inject IAntiforgery Antiforgery
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Přihlášení</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Přihlášení pro rodiče</h3>
                    <p class="card-text mb-0">s e-mailem a heslem pro plný přístup k informacím</p>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @errorMessage
                        </div>
                    }

                    <form method="post" action="/Account/login">
                        <input name="__RequestVerificationToken" type="hidden" value="@antiForgeryToken" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">E-mail:</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input type="email" id="email" name="email" required class="form-control" 
                                       placeholder="Zadejte váš e-mail" autocomplete="email" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Heslo:</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" id="password" name="password" required class="form-control" 
                                       placeholder="Zadejte vaše heslo" autocomplete="current-password" />
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Přihlásit se
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p class="mb-0">
                            Nemáte účet? <a href="/registrace" class="text-decoration-none">Zaregistrujte se zde</a>
                        </p>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="small">
                        <h6 class="fw-bold">Informace:</h6>
                        <p class="mb-2"><strong>Registrace:</strong> Vyberte si tábor a dokončete registraci pro získání přístupového kódu.</p>
                        <p class="mb-2"><strong>Kontakt:</strong> E-mail: info@letnítabory.cz | Telefon: +420 123 456 789</p>
                        
                        <div class="alert alert-info p-2 mb-0">
                            <h6 class="fw-bold mb-1">Testovací účty:</h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Rodič:</strong><br>
                                    rodic@example.com<br>
                                    Heslo123!
                                </div>
                                <div class="col-sm-6">
                                    <strong>Admin:</strong><br>
                                    admin@letnítabory.cz<br>
                                    Admin123!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery] 
    public string? returnUrl { get; set; }
    
    private string errorMessage = "";
    private string antiForgeryToken = "";

    protected override void OnInitialized()
    {
        // Get error message from query parameter
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);
        
        if (query.TryGetValue("error", out var error))
        {
            errorMessage = error.ToString();
        }

        // Generate anti-forgery token
        var httpContext = HttpContextAccessor.HttpContext;
        if (httpContext != null)
        {
            var tokens = Antiforgery.GetAndStoreTokens(httpContext);
            antiForgeryToken = tokens.RequestToken ?? "";
        }
    }
}
